<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.myapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="첫번째 예제 - 토스트 메시지 생성"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나타내기"
        android:id="@+id/btn_show"
        android:onClick="onClick"
        android:layout_alignTop="@+id/btn_hide"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="숨기기"
        android:id="@+id/btn_hide"
        android:onClick="onClick"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="울리기"
        android:id="@+id/btn_ring"
        android:onClick="onClick"
        android:layout_below="@+id/btn_show"
        android:layout_alignLeft="@+id/btn_show"
        android:layout_alignStart="@+id/btn_show" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="끄기"
        android:id="@+id/btn_quit"
        android:onClick="onClick"
        android:layout_below="@+id/btn_hide"
        android:layout_alignLeft="@+id/btn_hide"
        android:layout_alignStart="@+id/btn_hide" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="두번째 예제- 진동 울리기"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="turn on"
        android:id="@+id/btn_flash_on"
        android:layout_below="@+id/btn_ring"
        android:layout_alignLeft="@+id/btn_ring"
        android:layout_alignStart="@+id/btn_ring"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="turn off"
        android:id="@+id/btn_flash_off"
        android:layout_alignBottom="@+id/btn_flash_on"
        android:layout_alignLeft="@+id/btn_quit"
        android:layout_alignStart="@+id/btn_quit"
        android:onClick="onClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="세번째 예제 - 손전등 켜기"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="네번째 예제 - 화면전환"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Page"
        android:id="@+id/btn_nextPage"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_flash_off"
        android:layout_alignStart="@+id/btn_flash_off"
        android:onClick="onClick" />

</RelativeLayout>
